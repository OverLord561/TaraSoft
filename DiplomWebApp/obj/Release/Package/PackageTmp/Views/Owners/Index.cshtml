@model IEnumerable<DiplomWebApp.Models.Owners>

@{
    ViewBag.Title = "Усі власники";
}

<h2>Усі власники</h2>

<p>
    @if (TempData.Peek("LogIn") as string == "admin")
    {
        @Html.ActionLink("Створити нового", "Create")
    }
</p>
<div class="row">
    <br />
    <div class=" col-lg-12" style="text-align:center">

        <form class="form-inline" action="/Owners/Index" method="post">
            <label class="sr-only" for="inlineFormInput">П.І.Б.</label>
            <input name="name" type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="П.І.Б. ...">

            <label class="sr-only" for="inlineFormInput">Телефон</label>
            <input name="telephone" type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Телефон...">

            <label class="sr-only" for="inlineFormInput">Номер</label>
            <input name="number" type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Номер...">

            <button type="submit" class="btn btn-primary">Пошук</button>
        </form>
    </div>
    <br />
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Firms.NameFirm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firms.NameFirm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @if (TempData.Peek("LogIn") as string == "admin")
                {

                    @Html.ActionLink("Редагувати | ", "Edit", new { id = item.Id })
                    @Html.ActionLink("Детальніше | ", "Details", new { id = item.Id })
                    @Html.ActionLink("Видалити", "Delete", new { id = item.Id })

                }
            </td>
        </tr>
    }

</table>
