
@{
    ViewBag.Title = "Авторизація";
}

    <div class="container body-content">

        <h2>Авторизація</h2>
        
        
            @if (ViewBag.Error != null)
            {
                <h3 style="color:darkred">
                    @ViewBag.Error
                </h3>
            }
            else
            { }
            
        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
                    <form action="/Account/Login" class="form-horizontal" method="post" role="form" >
                        <hr>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="Email">Ім'я</label>
                            <div class="col-md-10">
                                <input class="form-control" data-val="true" required="required" id="name" name="name" type="text" value="">
                                <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="Password">Пароль</label>
                            <div class="col-md-10">
                                <input class="form-control" data-val="true" required="required"  id="password" name="password" type="password">
                                <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input value="Увійти" type="submit"  class="btn btn-default">
                            </div>
                        </div>
                        
                    </form>
                </section>
            </div>
            
        </div>

       
    </div>
   



