@model IEnumerable<DiplomWebApp.Firms>

@{
    ViewBag.Title = "Усі фірми";
}

<h2>Усі фірми</h2>

<p>
    @if (TempData.Peek("LogIn") as string == "admin")
    {
        @Html.ActionLink("Створити нову", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameFirm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameFirm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @if (TempData.Peek("LogIn") as string == "admin")
                {
                    
               @Html.ActionLink("Редагувати | ", "Edit", new { id = item.Id })  
               @Html.ActionLink("Детальніше | ", "Details", new { id = item.Id }) 
               @Html.ActionLink("Видалити", "Delete", new { id = item.Id })

                }
            </td>
        </tr>
    }

</table>
